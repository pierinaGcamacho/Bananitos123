<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportePlagas"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/titulo_principal" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="306dp"
                android:layout_height="62dp"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="-40dp"
                android:layout_marginRight="25dp"
                android:foregroundTint="#C66666"
                app:srcCompat="@drawable/rectangle_verde" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="306dp"
                android:layout_height="62dp"
                android:layout_gravity="center"
                android:layout_marginTop="-63dp"
                android:gravity="center"
                android:text="Control de Plagas"
                android:textColor="@color/letras_logo"
                android:textColorLink="@color/letras_logo"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="306dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="LADO DERECHO"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingrese el número de plantas"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/plantNumberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text=""
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:textSize="20sp" />

            <Button
                android:id="@+id/generateFieldsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/verde_claro"
                android:text="Generar campos" />

            <LinearLayout
                android:id="@+id/plantFieldsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/tvCentro"
                android:layout_width="306dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="CENTRO"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvplanatascentro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingrese el número de plantas"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/plantNumberEditTextCentro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text=""
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:textSize="20sp" />

            <Button
                android:id="@+id/generateFieldsButtonCentro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/verde_claro"
                android:text="Generar campos" />

            <LinearLayout
                android:id="@+id/plantFieldsContainerCentro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/tvIzquierdo"
                android:layout_width="306dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="LADO IZQUIERDO"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvplanatasizquierda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingrese el número de plantas"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/plantNumberEditTextIzquierdo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text=""
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:textSize="20sp" />

            <Button
                android:id="@+id/generateFieldsButtonIzquierdo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/verde_claro"
                android:text="Generar campos" />

            <LinearLayout
                android:id="@+id/plantFieldsContainerIzquierdo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
            <Button
                android:id="@+id/buttonGenerate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/letras_logo"
                android:text="Generar resumen"
                android:textSize="25dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>